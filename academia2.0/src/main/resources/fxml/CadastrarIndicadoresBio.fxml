<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.upe.academia2.ui.controllers.CadastrarIndicadorBioController"
            prefWidth="370" prefHeight="430"
            style="-fx-background-color: #0f4c83;">
    <!-- Barra branca superior para o título -->
    <Pane prefWidth="370" prefHeight="52"
          style="-fx-background-color: white;">
        <Label layoutX="16" layoutY="14" text="Cadastro de Indicador Biomédico"
               style="-fx-font-size:18; -fx-font-weight: bold;"/>
    </Pane>

    <!-- Formulário direto sobre fundo cinza -->
    <VBox layoutX="30" layoutY="70" spacing="14" prefWidth="310">

        <Label text="Peso (kg)" style="-fx-text-fill: white;"/>
        <TextField fx:id="pesoField" promptText="Peso (kg)" prefWidth="230"/>

        <Label text="Altura (cm)" style="-fx-text-fill: white;"/>
        <TextField fx:id="alturaField" promptText="Altura (cm)" prefWidth="230"/>

        <Label text="Percentual de Gordura (%)" style="-fx-text-fill: white;"/>
        <TextField fx:id="percGorduraField" promptText="Percentual de Gordura (%)" prefWidth="230"/>

        <Label text="Percentual de Massa Magra (%)" style="-fx-text-fill: white;"/>
        <TextField fx:id="massaMagraField" promptText="Percentual de Massa Magra (%)" prefWidth="230"/>

        <Label fx:id="mensagemLabel" style="-fx-text-fill: red;"/>
        <HBox alignment="CENTER">
            <Button text="Salvar" onAction="#handleCadastrarIndicadores" prefWidth="100" style="-fx-background-color: #488BC6; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.2, 0, 2);"/>
        </HBox>
    </VBox>
</AnchorPane>
