<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.upe.academia2.ui.controllers.ImportarIndicadoresBioController"
            prefWidth="370" prefHeight="230"
            style="-fx-background-color: #0f4c83;">
    <!-- Barra branca superior para o tÃ­tulo -->
    <Pane prefWidth="370" prefHeight="52" style="-fx-background-color: white;">
        <Label layoutX="16" layoutY="14" text="Indicadores"
               style="-fx-font-size:18; -fx-font-weight: bold;"/>
    </Pane>

    <VBox layoutX="30" layoutY="72" spacing="16" prefWidth="310">
        <TextField fx:id="campoArquivo"
                   promptText="Clique para selecionar o arquivo..."
                   prefWidth="230"
                   editable="false"
                   onMouseClicked="#handleSelecionarArquivo" />
        <HBox alignment="CENTER">
            <Button text="Salvar" fx:id="btnImportar" onAction="#handleImportar" prefWidth="100" style="-fx-background-color: #488BC6; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.2, 0, 2);"/>
        </HBox>
        <Label fx:id="mensagemLabel" style="-fx-text-fill: red;" />
    </VBox>
</AnchorPane>
