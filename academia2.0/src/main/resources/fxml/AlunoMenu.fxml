<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.academia2.ui.controllers.AlunoMenuController">
    <left>
        <VBox styleClass="sidebar" prefWidth="200.0" BorderPane.alignment="CENTER" style="-fx-background-color: #0f4c83">
            <children>
                <Label styleClass="sidebar-title" text="Academia" textFill="WHITE" textAlignment="CENTER">
                    <font>
                        <Font name="Calibri Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>

                <fx:define>
                    <ToggleGroup fx:id="menuToggleGroup" />
                </fx:define>

                <ToggleButton fx:id="btnPerfil" mnemonicParsing="false" onAction="#handlePerfil" prefHeight="47.0" prefWidth="200.0" text="Perfil" style="-fx-background-color: #07579D; -fx-border-color: #FFFFFF" textFill="WHITE" toggleGroup="$menuToggleGroup" selected="true" alignment="CENTER_LEFT">
                <font> <Font name="Calibri Bold" size="15.0" /> </font>
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/img/Usuario.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton fx:id="btnExercicio" mnemonicParsing="false" onAction="#handleExercicio" prefHeight="47.0" prefWidth="200.0" text="Exercício" style="-fx-background-color: #07579D; -fx-border-color: #FFFFFF"  textFill="WHITE" toggleGroup="$menuToggleGroup" alignment="CENTER_LEFT" >
                    <font> <Font name="Calibri Bold" size="15.0" /> </font>
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/img/PesoAcademia.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton fx:id="btnPlanoTreino" mnemonicParsing="false" onAction="#handlePlanoTreino" prefHeight="47.0" prefWidth="200.0" text="Plano de Treino" style="-fx-background-color: #07579D; -fx-border-color: #FFFFFF"  textFill="WHITE" toggleGroup="$menuToggleGroup" alignment="CENTER_LEFT">
                    <font> <Font name="Calibri Bold" size="15.0" /> </font>
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/img/PlanoTreino.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton fx:id="btnSecao" mnemonicParsing="false" onAction="#handleSecao" prefHeight="47.0" prefWidth="200.0" text="Seção" style="-fx-background-color: #07579D; -fx-border-color: #FFFFFF"  textFill="WHITE" toggleGroup="$menuToggleGroup" alignment="CENTER_LEFT">
                    <font> <Font name="Calibri Bold" size="15.0" /> </font>
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="/img/SessaoTreino.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </ToggleButton>

                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="btnSair" onAction="#handleSair" prefHeight="34.0" prefWidth="100.0" style="-fx-background-color: #ee3440; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 7;" text="Sair" />
            </children>
        </VBox>
    </left>
</BorderPane>