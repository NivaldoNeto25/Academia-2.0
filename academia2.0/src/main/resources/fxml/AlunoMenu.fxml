<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.academia2.ui.controllers.AlunoMenuController">
    <left>
        <VBox styleClass="sidebar" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="sidebar-title" text="Academia">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                
                <fx:define>
                    <ToggleGroup fx:id="menuToggleGroup" />
                </fx:define>
                
                <ToggleButton fx:id="btnPerfil" mnemonicParsing="false" onAction="#handlePerfil" text="Perfil" styleClass="nav-button" toggleGroup="$menuToggleGroup" selected="true" />
                <ToggleButton fx:id="btnExercicio" mnemonicParsing="false" onAction="#handleExercicio" text="Exercício" styleClass="nav-button" toggleGroup="$menuToggleGroup" />
                <ToggleButton fx:id="btnPlanoTreino" mnemonicParsing="false" onAction="#handlePlanoTreino" text="Plano de Treino" styleClass="nav-button" toggleGroup="$menuToggleGroup" />
                <ToggleButton fx:id="btnSecao" mnemonicParsing="false" onAction="#handleSecao" text="Seção" styleClass="nav-button" toggleGroup="$menuToggleGroup" />
                
                <Region VBox.vgrow="ALWAYS" />
                
                <Button fx:id="btnSair" mnemonicParsing="false" onAction="#handleSair" text="Sair" styleClass="exit-button" />
            </children>
        </VBox>
    </left>
</BorderPane>