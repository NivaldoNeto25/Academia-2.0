<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.upe.academia2.ui.controllers.SecaoTreinoController"
      spacing="16">

    <!-- Adicionando Padding para garantir espaçamento -->
    <padding><Insets top="16" right="24" bottom="24" left="24"/></padding>

    <!-- Título da Página -->
    <Label fx:id="tituloPagina" text="Seção"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0F4C83;"/>

    <!-- ComboBox para Seleção do Plano de Treino -->
    <ComboBox fx:id="comboPlanos" prefWidth="320" promptText="Selecione um Plano" />

    <!-- Botão para Realizar Sessões -->
    <Button fx:id="btnRealizarSecao" text="Realizar Seções do plano selecionado"
            style="-fx-background-color:#0F4C83; -fx-text-fill:white; -fx-background-radius:8;"/>

    <!-- Tabela para Exibir os Exercícios -->
    <TableView fx:id="tabelaExercicios" prefWidth="320" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colunaExercicio" prefWidth="150.0" text="Exercício" />
            <TableColumn fx:id="colunaSecao" prefWidth="100.0" text="Seção" />
            <TableColumn fx:id="colunaSeries" prefWidth="75.0" text="Séries" />
            <TableColumn fx:id="colunaReps" prefWidth="75.0" text="Repetições" />
            <TableColumn fx:id="colunaCarga" prefWidth="75.0" text="Carga (kg)" />
        </columns>
    </TableView>
</VBox>
