<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="580.0" styleClass="content-area" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.academia2.ui.controllers.ExercicioMenuController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="10.0">
         <children>
            <Label text="Exercício" styleClass="content-title">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="50.0" spacing="10.0">
         <children>
            <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#handleCadastrarExercicio" text="Cadastrar" />
            <Button fx:id="btnModificar" mnemonicParsing="false" onAction="#handleModificarExercicio" text="Modificar" />
         </children>
      </HBox>
      <TableView fx:id="tabelaExercicios" layoutX="14.0" layoutY="95.0" prefHeight="480.0" prefWidth="550.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="95.0">
        <columns>
          <TableColumn fx:id="colunaNome" prefWidth="200.0" text="Nome do Exercício" />
          <TableColumn fx:id="colunaGrupo" prefWidth="150.0" text="Grupo Muscular" />
          <TableColumn fx:id="colunaSeries" prefWidth="150.0" text="Séries x Repetições" />
           </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>