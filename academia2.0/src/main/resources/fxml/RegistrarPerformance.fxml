<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: #0f4c83;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.academia2.ui.controllers.RegistrarPerformanceController">
    <children>
        <Label fx:id="exercicioLabel" layoutX="36.0" layoutY="75.0" text="Exercício: [Nome do Exercício]" textFill="WHITE" wrapText="true">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <Pane prefHeight="52" prefWidth="450.0" style="-fx-background-color: white;">
            <Label layoutX="16" layoutY="14" style="-fx-font-size:18; -fx-font-weight: bold;" text="Registrar Performance" />
        </Pane>
        
        <GridPane hgap="10" layoutX="36.0" layoutY="120.0" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Plano" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <Label text="Realizado" textFill="WHITE" GridPane.columnIndex="2" GridPane.halignment="CENTER">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                
                <Label text="Séries" textFill="WHITE" GridPane.rowIndex="1" />
                <Label fx:id="seriesPlanoLabel" text="[3]" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                <TextField fx:id="seriesField" promptText="Séries" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                
                <Label text="Repetições" textFill="WHITE" GridPane.rowIndex="2" />
                <Label fx:id="repsPlanoLabel" text="[12]" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                <TextField fx:id="repsField" promptText="Reps" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                
                <Label text="Carga (kg)" textFill="WHITE" GridPane.rowIndex="3" />
                <Label fx:id="cargaPlanoLabel" text="[50]" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                <TextField fx:id="cargaField" promptText="Carga" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        
        <Button fx:id="btnSalvar" layoutX="297.0" layoutY="291.0" style="-fx-background-color: #488BC6; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.2, 0, 2);" mnemonicParsing="false" onAction="#handleSalvar" prefWidth="100.0" text="Salvar" />
        <Button fx:id="btnVoltar" layoutX="166.0" layoutY="291.0" style="-fx-background-color: #488BC6; -fx-text-fill: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.2, 0, 2);" mnemonicParsing="false" onAction="#handleVoltar" prefWidth="100.0" text="Voltar" />
    </children>
</AnchorPane>
