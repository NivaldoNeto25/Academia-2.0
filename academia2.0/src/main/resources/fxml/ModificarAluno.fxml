<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="350" prefWidth="330" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.upe.academia2.ui.controllers.ModificarAlunoController"
            style="-fx-background-color: #0f4c83;">
    <!-- Barra branca superior -->
    <Pane prefWidth="330" prefHeight="52"
          style="-fx-background-color: white;">
        <Label layoutX="16" layoutY="14" text="Modificar Aluno"
               style="-fx-font-size:18; -fx-font-weight: bold;"/>
    </Pane>

    <!-- Ãrea dos campos -->
    <VBox layoutX="35" layoutY="62" spacing="14" prefWidth="260">

        <Label text="Email" style="-fx-text-fill: white;"/>
        <TextField fx:id="emailField" promptText="Email" prefWidth="200"/>

        <Label text="Novo nome" style="-fx-text-fill: white;"/>
        <TextField fx:id="nomeField" promptText="Novo nome" prefWidth="200"/>

        <Label text="Nova senha" style="-fx-text-fill: white;"/>
        <TextField fx:id="senhaField" promptText="Nova senha" prefWidth="200"/>

        <Label fx:id="mensagemLabel" style="-fx-text-fill: red;"/>
        <HBox alignment="CENTER">
            <Button text="Modificar" onAction="#handleModificar" prefWidth="100"/>
        </HBox>
    </VBox>
</AnchorPane>