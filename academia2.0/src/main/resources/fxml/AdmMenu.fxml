<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.upe.academia2.ui.controllers.AdmMenuController"
            prefWidth="600" prefHeight="400">
    <Label layoutX="220" layoutY="40" text="Menu Administrador" style="-fx-font-size: 24"/>
    <Button fx:id="btnCadastrar" layoutX="200" layoutY="100" prefWidth="200" text="Cadastrar Aluno"
            onAction="#handleCadastrarAluno"/>
    <Button fx:id="btnListar" layoutX="200" layoutY="150" prefWidth="200" text="Listar Alunos"
            onAction="#handleListarAlunos"/>
    <Button fx:id="btnModificar" layoutX="200" layoutY="200" prefWidth="200" text="Modificar Aluno"
            onAction="#handleModificarAluno"/>
    <Button fx:id="btnExcluir" layoutX="200" layoutY="250" prefWidth="200" text="Excluir Aluno"
            onAction="#handleExcluirAluno"/>
    <Button fx:id="btnVoltar" layoutX="40" layoutY="350" prefWidth="100" text="Sair" onAction="#handleVoltar"/>
</AnchorPane>
