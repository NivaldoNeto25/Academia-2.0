<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="580.0" styleClass="content-area" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.academia2.ui.controllers.PlanoTreinoAlunoController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="14.0" spacing="10.0">
         <children>
            <Label text="Plano de Treino" styleClass="content-title">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <ComboBox fx:id="comboPlanos" layoutX="14.0" layoutY="58.0" prefWidth="250.0" promptText="Selecione um Plano" />
      <HBox layoutX="300.0" layoutY="58.0" spacing="10.0">
         <children>
            <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#handleCadastrarPlano" text="Cadastrar" />
            <Button fx:id="btnModificar" mnemonicParsing="false" onAction="#handleModificarPlano" text="Modificar" />
         </children>
      </HBox>

      <TableView fx:id="tabelaExercicios" layoutX="14.0" layoutY="110.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="110.0">
         <columns>
            <TableColumn fx:id="colunaExercicio" prefWidth="150.0" text="Exercício" />
            <TableColumn fx:id="colunaSecao" prefWidth="100.0" text="Seção" />
            <TableColumn fx:id="colunaSeries" prefWidth="75.0" text="Séries" />
            <TableColumn fx:id="colunaReps" prefWidth="75.0" text="Repetições" />
            <TableColumn fx:id="colunaCarga" prefWidth="75.0" text="Carga (kg)" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>