<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="academiaPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>br.upe.academia2.data.beans.Usuario</class>
        <class>br.upe.academia2.data.beans.Adm</class>
        <class>br.upe.academia2.data.beans.Comum</class>
        <class>br.upe.academia2.data.beans.Exercicio</class>
        <class>br.upe.academia2.data.beans.IndicadorBiomedico</class>
        <class>br.upe.academia2.data.beans.ItemPlanoTreino</class>
        <class>br.upe.academia2.data.beans.PlanoTreino</class>
        <class>br.upe.academia2.data.beans.SecaoTreino</class>


        <properties>
            <!-- Configuração de conexão com H2 -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:./academiaDB"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Configuração do Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
